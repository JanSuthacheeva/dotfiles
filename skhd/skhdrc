# Float / Unfloat window: lalt - space
lalt - space : yabai -m window --toggle float; sketchybar --trigger window_focus

# Focus window west
lalt - h : yabai -m window --focus west

# Focus window south
lalt - j : yabai -m window --focus south

# Focus window north
lalt - k : yabai -m window --focus north

# Focus window east
lalt - l : yabai -m window --focus east

# Swap window west
shift + alt - h : yabai -m window --swap west

# Swap window south
shift + alt - j : yabai -m window --swap south

# Swap window north
shift + alt - k : yabai -m window --swap north

# Swap window east
shift + alt - l : yabai -m window --swap east

# Increase window size to the right
shift + cmd - right : yabai -m window --resize right:50:0

# Decrease window size from the right
shift + cmd - left : yabai -m window --resize right:-50:0

# Increase window size downwards
shift + cmd - down : yabai -m window --resize bottom:0:50

# Decrease window size from the bottom
shift + cmd - up : yabai -m window --resize bottom:0:-50

# Warp window west
ctrl + lalt - h : yabai -m window --warp west

# Warp window south
ctrl + lalt - j : yabai -m window --warp south

# Warp window north
ctrl + lalt - k : yabai -m window --warp north

# Warp window east
ctrl + lalt - l : yabai -m window --warp east

# Toggle split direction
shift + lalt - space : yabai -m window --toggle split

